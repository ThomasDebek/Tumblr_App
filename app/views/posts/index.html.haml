%h1 Index Post
%table
  %thead
    %tr
      %th Title
      %th Body
      %th Time_ago
      %th{:colspan =>3}
      %tbody
        - @posts.each do |post|
          %td= post.title
          %td= post.body
          %td= time_ago_in_words(post.created_at)
          %td= link_to "Show", post
          %td= link_to "Edit", edit_post_path(post)
          %td= link_to "Delete", post, method: :delete, date: {confirm: 'Are you Sure '}


%h2
  = link_to "New post", new_post_path